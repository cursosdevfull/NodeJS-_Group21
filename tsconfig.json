{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "sourceMap": true
    },
    "exclude": [
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
}