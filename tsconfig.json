{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true
    },
    "exclude": [
        "**/*.spec.ts",
        "node_modules",
        "dist",
        "init"
    ],
    "include": [
        "src/**/*.ts"
    ],
}